<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.sh.crm.mapper.DepartmentMapper">
    <select id="findAllDepartment" parameterType="hashmap" resultType="com.sh.crm.po.Department">
        SELECT * FROM crm_department LIMIT #{pageIndex},#{pageSize};
    </select>
    <select id="findAllCountDepartment" resultType="int">
        SELECT COUNT(*) FROM crm_department;
    </select>
    <insert id="addDepartment" parameterType="com.sh.crm.po.Department">
        INSERT INTO crm_department VALUES(#{depId},#{depName});
    </insert>
    <select id="findDepartmentById" parameterType="string" resultType="com.sh.crm.po.Department">
        select * from crm_department where depId = #{depId}
    </select>
    <update id="updateDepartment" parameterType="com.sh.crm.po.Department">
        UPDATE  crm_department SET depName = #{depName} WHERE depId = #{depId};
    </update>
    <delete id="deleteDepartment" parameterType="string">
        DELETE FROM crm_department WHERE depId = #{depId};
    </delete>


</mapper>